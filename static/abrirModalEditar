
const modal = document.getElementById('modificarModal');
  const modalBody = document.getElementById('modal-body-form');

  // ---------------- Funciones de control del Modal ----------------
  function abrirModalModificar(cedula) {
    // 1. Limpia el cuerpo y muestra el modal
    modalBody.innerHTML = 'Cargando datos...';
    modal.style.display = 'block';

    // 2. Hace la petición AJAX a Flask
    fetch('/api/empleado/form/' + empleadoId)
      .then(response => {
        if (!response.ok) {
          throw new Error('No se pudo cargar el formulario');
        }
        // 3. Obtiene la respuesta como texto (que será el HTML del formulario)
        return response.text(); 
      })
      .then(htmlForm => {
        modalBody.innerHTML = htmlForm;
        // Opcional: Adjuntar manejadores de eventos al formulario inyectado
        // document.getElementById('formulario-edicion').onsubmit = enviarModificacion; 
      })
      .catch(error => {
        modalBody.innerHTML = '<p>Error al cargar: ' + error.message + '</p>';
        console.error('Error:', error);
      });
  }

  function cerrarModal() {
    modal.style.display = 'none';
  }

  // Cierra el modal si el usuario hace clic fuera de él
  window.onclick = function(event) {
    if (event.target === modal) {
      cerrarModal();
    }
  }
